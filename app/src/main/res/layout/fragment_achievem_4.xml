<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:padding="20dp"
                android:id="@+id/llQuestAchievement1"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Quest 1: Report on Locality"
                    android:id="@+id/textView6"
                    android:textIsSelectable="false"
                    android:textStyle="bold"
                    android:layout_gravity="left" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout2"
                    android:layout_weight="0.86">

                    <TextView
                        android:layout_width="152dp"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="center"
                        android:text="Send a report from the locality established"
                        android:id="@+id/tvDescQuest1"
                        android:padding="10dp"
                        android:textIsSelectable="false"
                        android:textStyle="normal"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="124dp"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="center"
                        android:text="Leganes"
                        android:id="@+id/textView3"
                        android:textIsSelectable="false"
                        android:textStyle="normal|bold"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/linearLayout"
                        android:gravity="center" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="10 AP"
                            android:id="@+id/textView4"
                            android:textSize="11dp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="5 XP"
                            android:id="@+id/textView5"
                            android:textSize="11dp"
                            android:textStyle="normal"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:padding="20dp"
                android:id="@+id/linearLayout5"
                android:weightSum="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Quest 1: Report on event"
                    android:id="@+id/textView7"
                    android:textIsSelectable="false"
                    android:textStyle="bold"
                    android:layout_gravity="left" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout4"
                    android:layout_weight="0.86" >

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="center"
                        android:text="Send a report with the suggested task from the ubication"
                        android:id="@+id/textView8"
                        android:padding="10dp"
                        android:textIsSelectable="false"
                        android:textStyle="normal"
                        android:textSize="13dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="154dp"
                        android:layout_height="match_parent"
                        android:id="@+id/linearLayout6"
                        android:gravity="center" >

                        <TextView
                            android:layout_width="137dp"
                            android:layout_height="55dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:gravity="center"
                            android:text="Car accident"
                            android:id="@+id/textView9"
                            android:textIsSelectable="false"
                            android:textStyle="normal|bold"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="137dp"
                            android:layout_height="55dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:gravity="center"
                            android:text="At Av. de Ateneas, Alcorcon, Comunidad de Madrid"
                            android:id="@+id/textView12"
                            android:textIsSelectable="false"
                            android:textStyle="normal|bold"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/linearLayout3"
                        android:gravity="center" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="20 AP"
                            android:id="@+id/textView10"
                            android:textSize="11dp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="10 XP"
                            android:id="@+id/textView11"
                            android:textSize="11dp"
                            android:textStyle="normal"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>