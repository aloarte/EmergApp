<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.uc3m.p4r4d0x.emergapp.EmergencyActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="43dp"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="43dp"
                        android:id="@+id/ivLogoToolbar"
                        android:src="@mipmap/ic_launcher" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="126dp"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_weight="0.36">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="87dp"
                            android:layout_height="wrap_content"
                            android:weightSum="1" >

                            <TextView
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:id="@+id/tvToolbarLevel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level  :"
                                android:textSize="15dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                />
                            <TextView
                                android:gravity="left"
                                android:id="@+id/tvToolbarLevelNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="15dp"
                                android:layout_weight="1.77" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:weightSum="1" >

                            <TextView
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:id="@+id/tvToolbarPoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Points:"
                                android:textSize="15dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                />
                            <TextView
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:id="@+id/tvToolbarPointsNumber"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="15dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivLogros"
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:src="@mipmap/logros"
                        android:layout_weight="0.05" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/tvToolbarUser"
                        android:layout_width="wrap_content"
                        android:layout_height="51dp"
                        android:text="Default User"
                        android:textSize="17dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="right"
                        android:textIsSelectable="false"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivToolbarLogout"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/logout"
                        android:onClick="onClickLogout"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="right"

                        />
                </LinearLayout>


        </LinearLayout>



        </android.support.v7.widget.Toolbar>



    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_emergency" />

</android.support.design.widget.CoordinatorLayout>
